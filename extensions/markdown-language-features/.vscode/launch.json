{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Markdown Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"stopOnEntry": false,
			"sourceMaps": true,
			"outFiles": [
				"${workspaceFolder}/client/out/**/*.js"
			],
			"smartStep": true,
    }
  ]
}